#!/bin/bash

usage () {
	echo ""
	echo "Usage:"
	echo "  ${0} <container name / hash> [ <package> ]"
	echo "    where package is a single name or ALL"
	echo ""
}

image="${1}"
if [ "x${image}" = "x" ]; then
	usage
	exit 0
fi

pkg="${2}"
if [ "x${pkg}" = "x" ]; then
	usage
	exit 0
fi

# get the absolute path to the directory with this script
pushd $(dirname $0) > /dev/null
base=$(pwd -P)
popd > /dev/null

# the docker run helper script
drun="${base}/docker_run"

# the recipe directory
recipes="${base}/../recipes"

names=""
if [ "${pkg}" = "ALL" ]; then
	names=$(ls ${recipes})
else
	names=${pkg}
fi

eval ${drun} ${image} "${recipes}" \
"./setup.sh; cd work; for p in ${names}; do conda build ${p} >log_${p} 2>&1; done"

